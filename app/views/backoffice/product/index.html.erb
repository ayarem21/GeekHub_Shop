<p id="notice"><%= notice %></p>
<div><%= link_to 'New post', new_admin_product_path, class: "btn btn-primary"%></div>



<% @products.each do |product| %>
  <div class="container alert alert-light">
    <div class="list group-item">
      <div>
        <i class="fas fa-address-book"></i>
        <strong>Description:</strong>
      </div>

      <div><%= product.description %> </div>

      <div>
        <i class="fab fa-accusoft"></i>
        <strong>Title:</strong>
      </div>
      <div><%= product.title %></div>

      <div>
        <i class="fab fa-adversal"></i>
        <strong>Price:</strong>
      </div>
      <div><%= product.price %></div>
      <div>
        <%= Category.find(product.category_id).title %>
        <div><%= link_to 'Show', product, class:"btn btn-outline-success" %>
            <%= link_to 'Edit', edit_admin_product_path(product), class:"btn btn-outline-warning"%>
            <%= link_to 'Destroy', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger"%>
        </div>
      </div>
    </div>
  </div>
<% end %>


<br>