<h2>All Orders</h2>

<% @orders.each do |order| %>
  <% if current_user.id == order.user_id %>
    <p>Name: <%= order.name %></p>
    <p>Email: <%= order.email %></p>
    <p>Line Items: </p>
    <ul>
      <% order.cart_items.each do |item| %>
        <li><%= item.quantity %> x <%= item.product.title %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>