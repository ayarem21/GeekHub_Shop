<h1><%= t('products.index.login') %></h1>
<%= form_tag sessions_path, method: :post do %>
  <div class="form-group">
    <%= label_tag :"#{t('user.email')}" %>
    <%= email_field_tag :email, nil, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= label_tag :"#{t('user.password')}" %>
    <%= password_field_tag :password, nil, class: 'form-control', required: true %>
  </div>

  <%= submit_tag "#{t('products.index.login')}", class: 'btn btn-success btn-lg' %>
<% end %>