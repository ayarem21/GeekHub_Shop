<%= form_with(model: [ :admin, @order ], local: true) do |form| %>

  <div class="field">
    <%= form.label :status %>
    <%= form.text_field :status, class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_field :comment, class:"form-control" %>
  </div>

  <%= form.submit :Submit, class:"btn btn-dark"%>
  <br>
<% end %>