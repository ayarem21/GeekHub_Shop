<p id="notice"><%= notice %></p>
<div class=" containerr">
  <div class="container">
    <table class="table">
      <tr>
        <td><strong><%= t('products.index.title') %></strong></td>
        <td><strong><%= t('products.index.description') %></strong></td>
        <td><%= link_to "#{t('products.index.n_c')}", new_admin_category_path, class: "btn btn-primary"%></td>
      </tr>

    <% @categories.each do |category| %>
        <tr>
          <td><%= category.title %></td>
          <td><%= category.description %></td>
          <td><%= link_to "#{t('products.index.show')}", admin_category_path(category), class:"btn btn-outline-success" %>
            <%= link_to "#{t('products.index.edit')}", edit_admin_category_path(category), class:"btn btn-outline-warning"%>
            <%= link_to "#{t('products.index.destroy')}", admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger"%></td>
        </tr>
    <% end %>
    </table>
  </div>
</div>