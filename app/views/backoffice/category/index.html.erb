<%= render '/backoffice/admin/admin' %>
<div class="container">
  <table class="table">
    <tr>
      <td><strong>Title:</strong></td>
      <td><strong>Description:</strong></td>
      <td><%= link_to 'New category', new_admin_category_path, class: "btn btn-primary"%></td>
    </tr>

  <% @categories.each do |category| %>
      <tr>
        <td><%= category.title %></td>
        <td><%= category.description %></td>
        <td><%= link_to 'Show', admin_category_path(category), class:"btn btn-outline-success" %>
